{
  "compilerOptions": {
    "types": ["miniprogram-api-typings"],
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
